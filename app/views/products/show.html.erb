
<h1><%= @product.name %></h1>
<img src="<%= @product.image %>" class="product_show_image">

<h3>Price: 
<%= number_to_currency(@product.price) %></h3>

<h3>Description: </h3>
<%= @product.description %>

<h4>Stock: 
<%= @product.stock %> items in stock</h4>

<h4>Supplier: 
<%= @product.supplier.name %></h4>

<br />
<%= link_to "Edit Product", "/products/#{@product.id}/edit" %>
<br />
<%= link_to "Delete Product", "/products/#{@product.id}", method: :delete %>
